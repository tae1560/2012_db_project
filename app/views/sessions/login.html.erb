<%if notice%>
    <script>
        alert("<%= notice %>");
    </script>
    <% notice = nil %>
<%end%>

<%= image_tag "gugugu.png", :id => "gugugu" %>

<% @page_title = "UserAuth | Login" -%>
<div class="center_div">
<div id="login_box" class="box">
  <h2>로그인</h2>
  <%= form_tag :action => 'login_attempt' do %>
    <ul>
      <li><hr /></li>
      <li><span>아이디</span> <%= text_field_tag :login_id %></li>
      <li><span>비밀번호</span> <%= password_field_tag :password %></li>
      <li><hr /></li>
      <li id="login_box_buttons">
      <%= submit_tag "Log In", :class => "left_align" %>
      <%= button_tag "Join", :type => "button", :id => "join_button"%>
      </li>
    </ul>
<% end %>
<script type="text/javascript">
//알고 싫어 ㅠㅠ
function animate(target)
{
	target.delay(2000).animate({left:'+=8%', bottom:'-=2%',height:'+=5%'},8000)
		.delay(2000).animate({left:'-=8%', bottom:'+=2%',height:'-=5%'},8000,function(){animate($(this));});
}

animate($("#gugugu"));

$("#join_button").click(function(){location.href="<%= new_user_path %>";});
</script>
</div>
</div>
