<%= render 'menu' %>

<div class="user_box fullsize_box box">
  <h2>세부/응용분야 관리</h2>
</div>

<div class="user_box fullsize_box box">
  <h3>세부/응용분야 추가</h3>
  <p>
    <%= form_for :sub_field, :url => "/sub_fields" do |f| %>
        <%= f.text_field :name %>
        <%= f.submit "추가" %>
    <% end %>
  </p>
</div>

<div class="user_box fullsize_box box">
  <h3>세부/응용분야 목록</h3>
  <hr />
  <ul>
      <% @sub_fields.each do |sub_field| %>
          <li>
            <%= sub_field.name %>
            <div class="right"><%= link_to "삭제", sub_field, :method => :delete, :data => {:confirm => "정말 삭제하시겠습니까?"} %></div>
            <hr />
          </li>
      <% end %>
  </ul>
</div>
