<%= render "menu" %>

<%= render "users/edit_profile_form" %>

<div class="center_div">
<div id= "signup_box" style="top:29em;" class="box">
  
개발자용 프로필 수정
<%= form_for @sw_developer do |f| %>
    단가 : <%= f.text_field :developer_pay %>

    <div><h4>전문분야</h4>
      <% # 전문분야들을 체크해주기 위한 부분 %>
      <% pro_field_ids = [] %>
      <% @sw_developer.pro_fields.each do |pro_field| %>
          <% pro_field_ids.push pro_field.id %>
      <% end %>

      <%= form_for @sw_developer do |f| %>
          <% @pro_fields.each do |pro_field| %>
              <%= check_box :pro_field, pro_field.id, :checked => pro_field_ids.include?(pro_field.id) %>
              <%= pro_field.name %>
          <% end %>
          &nbsp;&nbsp;
          <% if @sw_developer.pro_fields.empty? %>
              <div class="input_submit right"><%= f.submit "선정" %></div>
          <% else %>
              <div class="input_submit right"><%= f.submit "수정" %></div>
          <% end #if-else %>
      <% end %>
    </div>

<% end %>
</div>
</div>